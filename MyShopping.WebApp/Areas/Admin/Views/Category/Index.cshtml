@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Categoreis Management";
    ViewBag.CardTitle = "Views Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
    <a class="btn btn-info" href="/Admin/Category/Create">Create</a>
</div>

<hr />

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created Time</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Admin/Category/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Admin/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>   
    }
</table>
