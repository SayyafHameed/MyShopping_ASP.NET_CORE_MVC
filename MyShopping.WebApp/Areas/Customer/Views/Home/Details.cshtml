@model ShoppingCart


<form method="post">
    <section class="ftco-section">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <input hidden asp-for="ProductId" />
                <div class="col-lg-6 mb-5 ftco-animate">
                    <div  class="image-popup"><img src="~/@Model.Product.Image" class="img-fluid" alt="Colorlib Template"></div>
                </div>
                <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                    <h3>@Model.Product.Name</h3>

                    <p class=""><span>$@Model.Product.Price</span></p>
                    <p class="lead">
                        @Model.Product.Description
                    </p>
                    <div class="row">
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row pl-2 mb-3">
                        <div class="col-12 col-md-6 pb-1">
                            <button type="submit"
                                    class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                Add to Cart
                            </button>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>




